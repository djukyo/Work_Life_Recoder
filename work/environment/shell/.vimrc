"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
" djukyo@ .vimrc
"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""

"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
" Section

"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
" level 1
set number    " nu
set hlsearch    " hls
set autoindent
set nobackup
set ruler
set showmode
set backspace=2
set guifont=Ubuntu\ Mono\ 16

"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
" Windows Cygwin don't support
"colorscheme murphy

"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
" level 2
set nocompatible
set history=1000
filetype on
"set iskeyword+=_,$,@,%,",-
syntax on


set shortmess=atI
set noerrorbells

set showmatch
set incsearch

set smartindent
set tabstop=8
set softtabstop=8
set shiftwidth=8
set noexpandtab
